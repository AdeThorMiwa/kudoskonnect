        <label for="fullName">Full Name</label>
        <input type="text" value="{{getFullNameFrom user}}" class="form-control" data-bv-field="fullName" id="fullName"
            required placeholder="Full Name">
    </div>
    <div class="form-group">
        <label for="mobileNumber">Mobile Number</label>
        <input type="text" value="{{getMobileFrom user}}" class="form-control" data-bv-field="mobilenumber"
            id="mobileNumber" required placeholder="Mobile Number">
    </div>
    <div class="form-group">
        <label for="emailID">Email ID</label>
        <input type="text" value="{{getEmailFrom user}}" class="form-control" data-bv-field="emailid" id="emailID"
            required placeholder="Email ID">
    </div>
